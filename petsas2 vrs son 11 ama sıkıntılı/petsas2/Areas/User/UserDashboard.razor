    public string ReadOnly { get; set; } = "Hesabım";

    private List<CardsGrid.CardInfo> CardList = new() {
        new() { Title = "Profil Bilgilerim", Icon="bi bi-clipboard-heart-fill",  Link = "/user/profile", ButtonText = "Profil Bilgilerim" }, // ekleme + silme -
        new() { Title = "Adres Bilgilerim",  Icon="bi bi-house-door-fill",      Link = "/user/adres", ButtonText = "Adres Bilgilerim" },  // ekleme + silme -
        new() { Title = "Pet Bilgilerim",  Icon="bi bi-house-door-fill",      Link = "/user/pets", ButtonText = "Pet Bilgilerim" },  // ekleme - silme - 
        new() { Title = "Siparişlerim",      Icon="bi bi-box2-heart-fill",        Link = "/user/orders", ButtonText = "Siparişlerim" }, //baya -
        new() { Title = "Sepetim",      Icon="bi bi-box2-heart-fill",        Link = "/user/cart", ButtonText = "Sepetim" }, //baya -
        new() { Title = "Çıkış Yap",      Icon="bi bi-box2-heart-fill",        Link = "Account/Logout", ButtonText = "Çıkış Yap" } //+
    };
}

