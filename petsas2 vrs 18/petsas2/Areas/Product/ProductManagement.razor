@page "/product/ProductManagement"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@using petsas2.Components
@using MudBlazor
@using petsas2.Components.Pages.Shared @* CardsGrid kullanabilmek için *@

<MudGrid GutterSize="2">
    <MudItem xs="12">
        <MudTextField T="string"
                      Value="ReadOnly"
                      Label="Şu Anda Buradasınız"
                      ReadOnly="true"
                      Variant="Variant.Outlined" />
    </MudItem>
</MudGrid>

<CardsGrid Items="CardList" />
@code {
    public string ReadOnly { get; set; } = " Ürün Yönetimi";

    private List<CardsGrid.CardInfo> CardList = new()
    {
        new() { Title = "Ürün Yönetimi",          Icon="bi bi-back",  Link =  "/product/ProductIndex",  ButtonText = "Git" },
        new() { Title = "Stoğu Azalan Ürünler",   Icon="bi bi-back",  Link =  "/stock/StockAlert",      ButtonText = "Git" },
    };
}