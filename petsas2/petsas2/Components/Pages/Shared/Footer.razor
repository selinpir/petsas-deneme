@* @* mb-4 : margin bottom 4px
target="_blank" — tıklandığında yeni sekmede açılmasını sağlar 
ctrl+k+d kod düzeni için
*@
<footer class="bg-body-tertiary text-center">
    <div class="container p-4">
        <!-- Sosyal Medya -->
        <section class="mb-4">
            @foreach (var social in SocialLinks)
            {
                <a data-mdb-ripple-init
                   class="btn btn-outline btn-floating m-1"
                   href="@social.Url"
                   target="_blank"
                   role="button">
                    <i class="@social.IconClass"></i>
                </a>
            }
        </section>

        <!-- Kısa Marka Metni -->
        <section class="mb-4">
            <p>PetSas ile dostlarınız her zaman keyifte — en kaliteli mama, oyuncak ve aksesuarların adresi.</p>
        </section>

        <!-- Linkler -->
        <section>
            <div class="row">
                <!-- Ürün Kategorileri -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Kategoriler</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var cat in ProductCategories)
                        {
                            <li>
                                <NavLink class="text-body text-decoration-none" href="@cat.Url">@cat.Title</NavLink>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Yasal Sayfalar -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Bilgilendirme</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var legal in LegalPages)
                        {
                            <li>
                                <NavLink class="text-body text-decoration-none" href="@legal.Url">@legal.Title</NavLink>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Hızlı Linkler -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">Sayfalar</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var link in PageLinks)
                        {
                            <li>
                                <NavLink class="text-body text-decoration-none" href="@link.Url">@link.Title</NavLink>
                            </li>
                        }
                    </ul>
                </div>

                <!-- İletişim -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase">İletişim</h5>
                    <ul class="list-unstyled mb-0">
                        @foreach (var info in ContactItems)
                        {
                            <li>
                                @if (info.IsLink && !string.IsNullOrEmpty(info.Url))
                                {
                                    <a class="text-body text-decoration-none" href="@info.Url" target="_blank">@info.Title</a>
                                }
                                else
                                {
                                    <span class="text-body">@info.Title</span>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>

    <!-- Ödeme Logoları & Sertifikalar -->
    <section class="mb-4">
        <div class="container">
            <!-- Ödeme Logoları  -->
            <h6 class="text-uppercase mb-2">Ödeme Yöntemleri</h6>
            <div class="d-flex justify-content-center align-items-center flex-wrap">
                <img src="/img/paymentlogo/visa.png"
                     alt="Visa"
                     title="Visa"
                     class="me-2 mb-2"
                     style="height:50px;" />

                <img src="/img/paymentLogo/mastercard.png"
                     alt="Mastercard"
                     title="Mastercard"
                     class="me-2 mb-2"
                     style="height:50px;" />

                <img src="/img/paymentLogo/paypal.png"
                     alt="PayPal"
                     title="PayPal"
                     class="me-2 mb-2"
                     style="height:50px;" />

                <img src="/img/paymentLogo/iyzico.png"
                     alt="iyzico"
                     title="iyzico"
                     class="me-2 mb-2"
                     style="height:50px;" />

            </div>

            <!-- Sertifika / Rozetler Başlığı -->
            <h6 class="text-uppercase mt-3 mb-2">Sertifika &amp; Rozetler</h6>
            <div class="d-flex justify-content-center align-items-center flex-wrap">
                <img src="/img/paymentLogo/SSL.png"
                     alt="SSL Sertifikası"
                     title="SSL Sertifikası"
                     class="me-2 mb-2"
                     style="height:45px;" />
              

                <img src="/img/paymentLogo/ISO.png"
                     alt="ISO Sertifikası"
                     title="ISO Sertifikası"
                     class="me-2 mb-2"
                     style="height:45px;" />

                     @* elektronik ticaret bilgi sistemi *@
                <img src="/img/paymentLogo/etbis.jpg"
                     alt="ETBİS"
                     title="ETBİS"
                     class="me-2 mb-2"
                     style="height:45px;" />
            </div>

            <!-- İade & Değişim Garantisi -->
            <small class="d-block text-muted mt-3">
                30 gün içinde iade &amp; değişim garantisi.
            </small>
        </div>
    </section>

    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
        © @DateTime.Now.Year Copyright:
        <a class="text-reset fw-bold" href="/">Selin Pir</a>
    </div>
</footer>

